@model List<Registration>
@{
    ViewData["Title"] = "Пошук по Email";
}

<div class="container mt-4">
    <h2 class="mb-4">Пошук реєстрацій за Email</h2>

    <!-- Форма пошуку -->
    <form asp-action="SearchByEmail" method="post" class="row g-3 mb-4">
        <div class="col-md-6">
            <input type="text" name="email" class="form-control" placeholder="Введіть email для пошуку" required />
        </div>
        <div class="col-md-3">
            <button type="submit" name="action" value="Search" class="btn btn-primary w-100">
                🔍 Пошук
            </button>
        </div>
    </form>

    <!-- Результати -->
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Ім'я користувача</th>
                    <th>Email</th>
                    <th>Телефон</th>
                    <th>Дата реєстрації</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reg in Model)
                {
                    <tr>
                        <td>@reg.UserName</td>
                        <td>@reg.Email</td>
                        <td>@reg.Phone</td>
                        <td>@reg.RegisteredAt.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model != null)
    {
        <div class="alert alert-warning">За цим email нічого не знайдено.</div>
    }
</div>
