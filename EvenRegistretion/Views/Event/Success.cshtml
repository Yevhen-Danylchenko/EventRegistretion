@model IEnumerable<Registration>

@{
    ViewData["Title"] = "Список зареєстрованих";
}

<h2>Зареєстровані учасники</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ім'я користувача</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Дата реєстрації</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reg in Model)
        {
            <tr>
                <td>@reg.UserName</td>
                <td>@reg.Email</td>
                <td>@reg.Phone</td>
                <td>@reg.RegisteredAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-controller="Event" asp-action="SearchByEmail" asp-route-id="@reg.Id" class="btn btn-primary">Знайти по email</a>
                    <a asp-controller="Event" asp-action="DeleteRegistration" asp-route-id="@reg.Id" class="btn btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Повернутися до списку івентів</a>